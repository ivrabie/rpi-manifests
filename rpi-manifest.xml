<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- Default settings for all repositories -->
  <default revision="scarthgap" remote="yocto" sync-j="4"/>
  
  <!-- Define remotes (Git hosting services) -->
  <remote name="yocto" 
          fetch="https://git.yoctoproject.org/git/"
          review="https://wiki.yoctoproject.org/wiki/Contribution_and_Submission_Guide" />
  
  <remote name="openembedded" 
          fetch="https://github.com/openembedded/" />
  
  <remote name="raspberrypi" 
          fetch="https://github.com/agherzan/" />

  <remote name="rust-embedded" 
          fetch="https://github.com/rust-embedded/" />


  <remote name="rpi-linux" 
          fetch="https://gitlab.com/vrion69/" />

  <!-- Core Yocto layers -->
  <project name="poky" 
           path="sources" 
           revision="scarthgap" 
           remote="yocto">
  </project>

  <!-- OpenEmbedded layers -->
  <project name="meta-openembedded" 
           path="sources/meta-openembedded" 
           revision="scarthgap" 
           remote="openembedded" />

  <!-- Raspberry Pi layer -->
  <project name="meta-raspberrypi" 
           path="sources/meta-raspberrypi" 
           revision="scarthgap" 
           remote="raspberrypi" />

  <!-- Additional common layers -->
  <project name="meta-security" 
           path="sources/meta-security" 
           revision="scarthgap" 
           remote="yocto" />

  <project name="meta-virtualization" 
           path="sources/meta-virtualization" 
           revision="scarthgap" 
           remote="yocto" />

  <!-- Rust layer -->
  <project name="meta-rust-bin" 
           path="sources/meta-rust-bin" 
           branch="master" 
           remote="rust-embedded" />

<project name="meta-rpilinux1" 
        path="sources/meta-rpilinux" 
        branch="main"
        remote="rpi-linux" />

</manifest>
